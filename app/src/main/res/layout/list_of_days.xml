    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <CheckBox
            android:id="@+id/chkDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
