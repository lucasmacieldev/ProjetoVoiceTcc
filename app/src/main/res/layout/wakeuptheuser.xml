<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/pergunta"
        android:textStyle="bold"
        android:id="@+id/txtResultado"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/btnPausar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/cerclebackbroudyellow"
                android:padding="10dp"
                android:src="@drawable/ic_alarm_off_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Clique para pausar o despertador!"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:visibility="gone"
        style="Pausar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Parar Despertador"
        android:gravity="center_horizontal" />


</LinearLayout>